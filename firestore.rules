rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read all users (for dropdowns, etc.)
    // but only update their own user document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write all other collections
    // You may want to make these more restrictive based on your needs
    match /accounts/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /contacts/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /products/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /opportunities/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /tasks/{document} {
      allow read, write: if request.auth != null;
    }
  }
} 